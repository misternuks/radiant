<body class='world-background-image-div'>
  <div class="container">
    <div class="text-center p-5 m-5">
      <% if params[:enemy] %>
        <h1>Combat round for <%= params[:enemy] %>:</h1>
      <% else %>
        <h1>Combat round for <%= params[:character] %>:</h1>
      <% end %>
    </div>
    <div class="card-container">
      <div class="card p-3 m-3 bg-success bg-opacity-25 d-flex text-white">
        <%= simple_form_for [@campaign, @encounter] do |f| %>
          <%= f.input :skill_type, collection: %w[acid bludgeoning cold fire force lightning necrotic piercing poison psychic radiant slashing thunder], label: 'Select your damage type:', clas: "bg-success"  %>
          <%= f.input :target, collection: @encounter.players.map{ |player| player.character_name } + @encounter.enemies.map{ |enemy| enemy.name }, label: 'Select your target:' %>
          <%= f.label :success, 'Was the attack successful?' %>
          <%= f.input :success, label: false %>
          <%= f.label :criticality, 'Was the attack a killing blow?' %>
          <%= f.input :criticality, label: false %>
          <% f.hidden_field :summary, :value => "hello" %>
          <%= f.button :submit, 'Generate combat results', class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</body>
