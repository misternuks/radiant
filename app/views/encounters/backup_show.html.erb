<body class="encounter-show-background d-flex flex-column align-items-center">
  <div class="container m-5 p-5 d-flex flex-column justify-content-center align-items-between">
    <h1 class="m-0 p-0">Roll for initiative! Whose turn is it?</h1>
    <div class="encounter-player-div bg-success p-3 mt-3 bg-opacity-25">
      <% i = 1 %>
      <% @encounter.players.each do |player| %>
        <div class="encounter-player-icon shadow-lg">
          <%= link_to edit_campaign_encounter_path(campaign_id: @campaign.id, character: player.character_name), class: 'text-decoration-none link-dark' do %>
            <%= image_tag "hero#{i}.jpg"%>
            <% i+=1 %>
            <span><%= player.character_name %></span>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="narrative-div">
      <div class="nav-world-card" style="padding: 15px">
        <% if @encounter.summary.present? %>
          <h3 class="text-center">Combat Summary</h3>
          <%= @summary %>
        <% else %>
          <h2 class="m-0 p-0">Select combatant to generate combat narrative</h2>
        <% end %>
      </div>
    </div>
    <div class="encounter-player-div bg-success p-3 mt-3 bg-opacity-25" style="margin-top: 40px">
      <% @encounter.enemies.each do |enemy| %>
        <div class="encounter-player-icon">
          <%= link_to edit_campaign_encounter_path(campaign_id: @campaign.id, enemy: enemy.name), class: 'text-decoration-none link-dark' do %>
            <%= image_tag "goblin.jpg"%>
            <span><%= enemy.name %></span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</body>
