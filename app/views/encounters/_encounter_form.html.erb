<div class="nested-form-wrapper d-flex justify-content-between align-items-center" data-new-record="<%= f.object.new_record? %>">
  <%= f.label :name, class: "text-white" %>
  <%= f.text_field :name, class: "bg-success bg-opacity-10 text-white w-100 mx-3" %>
  <button type="button", class="btn btn-success", data-action="nested-form#remove">-</button>
  <%= f.hidden_field :_destroy %>
</div>
