<div class="nested-form-wrapper d-flex mt-2 justify-content-between align-items-center" data-new-record="<%= f.object.new_record? %>">
  <%= f.label :name, class: "text-white" %>
  <%= f.text_field :name, class: "bg-success bg-opacity-10 text-white w-100 m-2" %>
  <button class="bg-transparent border border-0" type="button" data-action="nested-form#remove"><i class="fa-solid fa-user-minus text-muted m-2"></i></button>
  <%= f.hidden_field :_destroy %>
</div>
