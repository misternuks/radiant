<%= @campaign.world_name %>
<div class="container">
  <div class="player-container d-flex">
    <% @encounter.players.each do |player| %>
      <%= link_to edit_campaign_encounter_path(:campaign_id => @campaign.id, :player_id => player.id), class: 'text-decoration-none link-dark' do %>
        <div class="card p-3 m-3"><%= player.player_name %>
        </div>
      <% end %>
    <% end %></div>
  <div class="enemy-container d-flex">
    <% @encounter.enemies.each do |enemy| %>
      <%= link_to edit_campaign_encounter_path(:campaign_id => @campaign.id, :enemy_id => enemy.id), class: 'text-decoration-none link-dark' do %>
        <div class="card p-3 m-3 "><%= enemy.name %>
        </div>
      <% end %>
    <% end %></div>
</div>
