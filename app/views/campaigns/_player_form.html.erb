<div class="nested-form-wrapper m-1" data-new-record="<%= f.object.new_record? %>">
  <div class="container border border-success border-1 rounded p-3 mb-3">
    <div class="row">
      <div class="col">
        <%= f.label :player_name, class: "mb-3" %>
      </div>
      <div class="col">
        <%= f.text_field :player_name, class: "bg-black border border-success border-rounded text-white  w-100" %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.label :character_name, class: "mb-3" %>
      </div>
      <div class="col">
        <%= f.text_field :character_name, class: "bg-black border border-success border-rounded text-white w-100"%>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <button class="btn btn-success" type="button" data-action="nested-form#remove">Delete player</button>
        <%= f.hidden_field :_destroy %>
      </div>
      <div class="col"></div>
    </div>
  </div>
</div>
