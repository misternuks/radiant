<body class="d-flex justify-content-center all-campaign-index-container">
  <div class="container d-flex flex-column align-items-center justify-content-center m-5">
    <h1>ALL CAMPAIGNS</h1>
    <div class="container d-flex align-items-center justify-content-center flex-wrap p-3 m-3">
      <% @campaigns.each do |campaign| %>
        <div class="campaign-card relative">
          <div class="card-world-name">
            <%=campaign.world_name %>
          </div>
          <%= link_to campaign_path(campaign), class: "text-decoration-none" do %>
            <div>
              <%=image_tag("#{campaign.world_biome}.jpg")%>
            </div>
          <% end %>
          <%=link_to campaign_path(campaign), class: "absolute", data: {turbo_method: :delete, turbo_confirm: "Do you want to delete this campaign?"} do %>
            <i class="fa-solid fa-trash-can text-muted m-2"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="container d-flex flex-column align-items-center m-3 gap-3">
      <%= link_to 'Create a new campaign', new_campaign_path, class: 'btn world-button w-50'  %>
      <%= link_to 'Back', root_path, class: 'btn world-button w-50'   %>
    </div>
  </body>
