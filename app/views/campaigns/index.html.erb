<body class="bg-black">
  <div class="container mt-5 pt-5 d-flex flex-column">
    <h1 class="text-center">CAMPAIGNS</h1>
    <h3 class="text-center p-3">Radiant generates narration using the game master's input. To get started, create or select a campaign.</h3>
    <div class="container d-flex align-items-center justify-content-center flex-wrap p-3">
      <div class="campaign-card">
        <div class="card-world-name">
          Create a new campaign
        </div>
        <%= link_to new_campaign_path, class: "text-center" do %>
          <div>
            <%= image_tag("gold-gem.jpg") %>
          </div>
          <i class="fa-solid fa-circle-plus text-muted m-2"></i>
        <% end %>
      </div>
      <% @campaigns.each do |campaign| %>
        <div class="campaign-card relative">
          <div class="card-world-name">
            <%=campaign.world_name %>
          </div>
          <%= link_to campaign_path(campaign), class: "text-decoration-none" do %>
            <div>
              <%=image_tag("#{campaign.world_biome}.jpg")%>
            </div>
          <% end %>
          <%=link_to campaign_path(campaign), class: "absolute", data: {turbo_method: :delete, turbo_confirm: "Do you want to delete this campaign?"} do %>
            <i class="fa-solid fa-trash-can text-muted m-2"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </body>
  <%#= link_to 'Back to the homepage', root_path, class: 'btn world-button w-50'   %>
